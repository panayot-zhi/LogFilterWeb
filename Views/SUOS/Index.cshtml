}

@section head {
    @* no-op *@
}

@section sidebar {
    <li class="active">
        <a href="@Url.Action("Index", "Home")">
            <i class="now-ui-icons arrows-1_minimal-left"></i>
            <p>SUOS</p>
        </a>
    </li>
    
    <li class="active-pro">
        <a href="~/swagger" target="_blank">
            <i class="now-ui-icons files_paper"></i>
            <p>Swagger</p>
        </a>
