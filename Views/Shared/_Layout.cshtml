<!DOCTYPE html>
<html lang="en">
<head>

    <title>@ViewData["Title"] - LogFilterWeb</title>

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <!-- Fonts and icons -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet" />

    <!-- Material Kit CSS -->
    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/now-ui-dashboard.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

    <!-- JQuery is loaded first and foremost -->
    <script src="~/lib/jquery/jquery.min.js" type="text/javascript"></script>
    <script src="~/js/site.js" type="text/javascript"></script>

    <!-- Delegated styles or priority scripts -->
    @await RenderSectionAsync("head", required: false)

</head>
<body>

<div class="wrapper">

    <!-- Sidebar -->
    <div class="sidebar" data-color="orange">
        <!--  Tip 1: You can change the color of the sidebar using: data-color="blue | green | orange | red | yellow" -->
        <div class="logo">
            <a asp-action="Index" asp-controller="Home" class="simple-text logo-mini">
                LFW
            </a>

            <a asp-action="Index" asp-controller="Home" class="simple-text logo-normal">
                LogFilterWeb
            </a>
        </div>

        <div class="sidebar-wrapper" id="sidebar-wrapper">
            <ul class="nav">

                @await RenderSectionAsync("sidebar", required: true)

                <li class="active-pro">
                    <a href="~/html/dashboard.html">
                        <i class="now-ui-icons design-2_html5"></i>
                        <p>Theme Showcase</p>
                    </a>
                </li>
            </ul>
        </div>

    </div>
    <!-- End Sidebar -->

    <div class="main-panel ps" id="main-panel">

        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-transparent  bg-primary  navbar-absolute">
            <div class="container-fluid">
                @await RenderSectionAsync("navbar", required: true)
            </div>
        </nav>
        <!-- End Navbar -->
        
        <!-- Main -->
        @RenderBody()
        <!-- End Main -->

        <!-- Footer -->
        <footer class="footer">
            <div class=" container-fluid ">
                @await RenderSectionAsync("footer", required: true)
                <div class="copyright" id="copyright">
                    © @DateTime.Now.Year Now UI; <a href="https://github.com/panayot-zhi" target="_blank">Panayot Ivanov</a>.
                </div>
            </div>

        </footer>
        <!-- End Footer -->

    </div>

</div>

<!-- Core JS Files -->
<script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.min.js" type="text/javascript"></script>
<script src="~/lib/jquery.perfect-scrollbar/perfect-scrollbar.min.js" type="text/javascript"></script>

<!-- Control Center for Now Ui Dashboard: parallax effects, scripts for the example pages etc -->
<script src="~/js/bootstrap-notify.js" type="text/javascript"></script>
<script src="~/js/now-ui-dashboard.js" type="text/javascript"></script>

<!-- Delegated page scripts -->
@await RenderSectionAsync("scripts", required: false)

</body>
</html>
